<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav>
        <a href="/Home/Index" class="navbar-brand"> <img src="~/Content/chinepe.png" alt="Company logo" height="50" style=" margin-top: -14px;  border-radius: 50%; " /> </a>

        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Candidates", "Index", "Candidates")</li>
            <li>@Html.ActionLink("Generate", "About", "Home")</li>
        </ul>
  </nav>
    
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Speedy Recruit</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
